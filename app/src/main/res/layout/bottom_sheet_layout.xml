<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Choose Color"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_yellow" />

        <View
            android:id="@+id/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/white" />

        <View
            android:id="@+id/blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_blue" />

        <View
            android:id="@+id/gold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_gold" />

        <View
            android:id="@+id/amethyst"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_amethyst" />

        <View
            android:id="@+id/cyan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_cyan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/teal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_teal" />

        <View
            android:id="@+id/red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_red" />

        <View
            android:id="@+id/peach"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_peach" />

        <View
            android:id="@+id/lemon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_lemon" />

        <View
            android:id="@+id/peacock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_peacock" />

        <View
            android:id="@+id/magenta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_button_background"
            android:backgroundTint="@color/light_magenta" />

    </LinearLayout>


</LinearLayout>